	default-destroy-method="close" default-lazy-init="false">
	
	<context:property-placeholder location="classpath:config-redis.properties" />
		
	<bean name="genericObjectPoolConfig" class="org.apache.commons.pool2.impl.GenericObjectPoolConfig">
		<property name="maxWaitMillis" value="-1" />
		<property name="maxTotal" value="8" />
		<property name="minIdle" value="0" />
		<property name="maxIdle" value="8" />
	</bean>
	<bean id="jedisCluster" class="com.cmdt.carrental.common.cache.JedisClusterFactory">
		<property name="connectionTimeout" value="3000" />
		<property name="soTimeout" value="1000" />
		<property name="maxRedirections" value="5" />
		<property name="genericObjectPoolConfig" ref="genericObjectPoolConfig" />
		<property name="jedisClusterNodes">
			<set>
				<value>${redis.node.host1}</value>
				<value>${redis.node.host2}</value>
				<value>${redis.node.host3}</value>
				<value>${redis.node.host4}</value>
				<value>${redis.node.host5}</value>
				<value>${redis.node.host6}</value>
			</set>
		</property>
	</bean>

